<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.stage.Stage?>

<fx:root resizable="false" title="Help" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/help_icon.png" />
  </icons>
  <scene>
    <Scene>
         <VBox prefHeight="176.0" prefWidth="254.0">
            <children>
               <HBox alignment="CENTER_RIGHT">
                  <children>
                     <Label fx:id="tipLabel" text="Press 'Esc' to exit" textAlignment="RIGHT" textFill="#00000076">
                        <font>
                           <Font name="System Italic" size="11.0" />
                        </font>
                     </Label>
                  </children>
               </HBox>
               <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0">
                  <children>
                     <Label fx:id="questionLabel" text="Question">
                        <VBox.margin>
                           <Insets bottom="30.0" top="30.0" />
                        </VBox.margin>
                        <font>
                           <Font name="System Bold" size="24.0" />
                        </font>
                     </Label>
                     <Label fx:id="answerLabel" text="Answer" textFill="#07a431">
                        <VBox.margin>
                           <Insets />
                        </VBox.margin>
                        <font>
                           <Font size="22.0" />
                        </font>
                     </Label>
                  </children>
               </VBox>
            </children>
            <opaqueInsets>
               <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
            </opaqueInsets>
            <padding>
               <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
         </VBox>
    </Scene>
  </scene>
</fx:root>
